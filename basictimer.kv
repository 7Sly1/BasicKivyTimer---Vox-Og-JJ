#:import kivy kivy

WindowManager:
    MainMenu:
    PlayingScreen:
    EndScreen:

<MainMenu>:
    name: "menu"
    GridLayout:
        rows:4

        GridLayout:
            cols: 1
            Label:
                text: "Game Name"
                font_size: self.height * 0.25

        GridLayout:
            cols: 1
            Button:
                text: "Start"
                font_size: self.height * 0.25

        GridLayout:
            cols: 3
            Button:
                text: "-"
                font_size: self.height * 0.6
                on_release: root.roundCount(-1)
            Label:
                text: root.roundText
                font_size: self.height * 0.25
            Button:
                text: "+"
                font_size: self.height * 0.6
                on_release: root.roundCount(1)

        GridLayout:
            cols: 3
            Button:
                text: "-"
                font_size: self.height * 0.6
                on_release: root.timeControl(-1)
            Label:
                text: root.timerText
                font_size: self.height * 0.25
            Button:
                text: "+"
                font_size: self.height * 0.6
                on_release: root.timeControl(1)

<PlayingScreen>:
    name: "playing"


<EndScreen>:
    name: "end"