#:import kivy kivy

<TimerLayout>:
	orientation: 'vertical'

    Button:
		text: root.buttonText
		font_size: self.height * 0.3
		on_release: root.toggle()

	BoxLayout:
	    Button:
	        text: "+"
	        font_size: self.height * 0.8
	        on_release: root.timeControl(1)

        Button:
	        color: (0, 1, 0, 1)
		    text: root.timerText
		    font_size: self.height * 0.5

	    Button:
	        text: "-"
	        font_size: self.height * 0.8
	        on_release: root.timeControl(-1)


    BoxLayout:
	    Button:
	        text: "+"
	        font_size: self.height * 0.8
	        on_release: root.timeControl(1)

        Button:
	        color: (0, 1, 0, 1)
		    text: root.rounds()
		    font_size: self.height * 0.5

	    Button:
	        text: "-"
	        font_size: self.height * 0.8
	        on_release: root.timeControl(-1)