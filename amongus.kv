#:import kivy kivy

WindowManager:
    id: windowmanager
    MainMenu:
        id: 'mainmenu'
        name: "menu"
        manager: windowmanager
    PlayingScreen:
        id: 'playingscreen'
        name: "playing"
        manager: windowmanager
    EndScreen:
        id: 'endscreen'
        name: "end"
        manager: windowmanager

<MainMenu>:
    name: "menu"

    GridLayout:
        rows: 4

        GridLayout:
            cols: 1

            Label:
                text: "Game name"
                font_size: self.height * 0.5

        GridLayout:
            cols: 1

            Button:
                text: "Start"
                font_size: self.height * 0.5
                on_release: app.root.current = "playing"

        GridLayout:
            cols: 3

            Button:
                text: "-"
                font_size: self.height * 0.5
                size_hint: 0.5, 1
                on_release: root.roundControl(-1)
            Label:
                text: root.roundText
                font_size: self.height * 0.5
            Button:
                text: "+"
                font_size: self.height * 0.5
                size_hint: 0.5, 1
                on_release: root.roundControl(1)

        GridLayout:
            cols: 3

            Button:
                text: "-"
                font_size: self.height * 0.5
                size_hint: 0.5, 1
                on_release: root.timeControl(-1)
            Label:
                text: root.timerText
                font_size: self.height * 0.5
            Button:
                text: "+"
                font_size: self.height * 0.5
                size_hint: 0.5, 1
                on_release: root.timeControl(1)

<PlayingScreen>:
    name: "playing"
    on_pre_enter: root.updateValues()
    on_enter: root.gameLoop()
    GridLayout:
        rows: 2

        GridLayout:
            cols: 2
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 30
            row_force_default: True
            center: root.width / 2, root.height / 2

            Label:
                text: "Thing to draw"
            Label:
                text: root.gameTimerText

        GridLayout:
            cols: 1

            canvas:
                Color:
                    rgba: (1, 1, 1, 1)



<EndScreen>:
    name: "end"

    Label:
        text: "This is the end screen"